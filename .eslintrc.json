{
  "extends": [ 
  "next/core-web-vitals",
  "plugin:@typescript-eslint/recommended", // ts 권장
  "plugin:prettier/recommended", // eslint의 포매팅을 prettier로 사용.
  "prettier"
  ],
  "rules": {
  "prettier/prettier": ["error", { "endOfLine": "auto" }],
  "@typescript-eslint/no-unused-vars": "warn"
  }
}